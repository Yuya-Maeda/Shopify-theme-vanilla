<!doctype html>
<html>
    <head>
        <title>{{ page_title }}</title>
        <meta charset="utf-8">
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <meta name="description" content="{{ page_description | escape }}">
        <link rel="canonical" href="{{ canonical_url }}">

        {%- comment -%}Boxicon CDN{%- endcomment -%}
        <link href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" rel="stylesheet">

        <style>
          :root {
            /* 5 Color palatte  */
          --color-palette-1 : {{ settings.color_palette_1 }};
          --color-palette-1-rgb: {{ settings.color_palette_1 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
          --color-palette-2 : {{ settings.color_palette_2 }};
          --color-palette-2-rgb: {{ settings.color_palette_2 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
          --color-palette-3 : {{ settings.color_palette_3 }};
          --color-palette-3-rgb: {{ settings.color_palette_3 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
          --color-palette-4 : {{ settings.color_palette_4 }};
          --color-palette-4-rgb: {{ settings.color_palette_4 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
          --color-palette-5 : {{ settings.color_palette_5 }};
          --color-palette-5-rgb: {{ settings.color_palette_5 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
          /* Text color  */
          --color-text-dark: {{ settings.color_dark_text }};
          --color-palette-dark-text-rgb: {{ settings.color_palette_dark_text | color_to_rgb | remove: 'rgb(' | remove: ')' }};
          --color-text-light: {{ settings.color_light_text }};
          --color-text-light-rgb: {{ settings.color_light_text | color_to_rgb | remove: 'rgb(' | remove: ')' }};
          /* Button color  */
          --color-button-primary : {{ settings.color_button_primary }};
          --color-button-primary-rgb: {{ settings.color_button_primary | color_to_rgb | remove: 'rgb(' | remove: ')' }};
          --color-button-secondary : {{ settings.color_button_secondary }};
          --color-button-secondary-rgb: {{ settings.color_button_secondary | color_to_rgb | remove: 'rgb(' | remove: ')' }};
          --color-button-tertiary : {{ settings.color_button_tertiary }};
          --color-button-tertiary-rgb: {{ settings.color_button_tertiary | color_to_rgb | remove: 'rgb(' | remove: ')' }};
        
        }
         </style>

        <meta content="width=device-width,initial-scale=1,shrink-to-fit=no" name="viewport">
        {{ content_for_header }}
        <!-- Header hook for plugins -->
        {{ 'main.css' | asset_url | stylesheet_tag }}
        {{ 'base.css' | asset_url | stylesheet_tag }}
        {{ 'application.css' | asset_url | stylesheet_tag }}

       
    </head>
    <body>
        {% section 'main-header' %}
        <!-- this div is for main=header's overlap   -->
       

        <main role="main">
            {{ content_for_layout }}
        </main>

        {% section 'main-footer' %}
        <!-- main-header.js  -->
        {{ 'main-header.js' | asset_url | script_tag }}
        {{ 'application.js' | asset_url | script_tag }}
        {{ 'option_selection.js' | shopify_asset_url | script_tag }}

    </body>
</html>

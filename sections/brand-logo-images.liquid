<section class="page-width">
    <div class="brand-logos">
        <div class="image-box">
            {% for block in section.blocks %}
                <div class="logo-card">
                    <img src="{{ block.settings.logo | img_url: 'medium'}}" alt="{{ block.settings.logo.alt}}">
                    <h3>{{ block.settings.title }}</h3>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
{
    "name": "Brand-logo-images",
    "max_blocks": 4,
    "blocks": [
            {   "type": "logo-and-title",
                "name": "Logo and Text",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "logo",
                        "label": "Logo Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    }
                ]

            }
             ],
    "presets": [
        {
            "category": "Image-text",
            "name":"Logo and Text"
        }
    ]
}
{% endschema %}
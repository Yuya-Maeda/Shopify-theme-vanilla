{%- comment -%}This is for sticky header {%- endcomment -%}
<div style="height: 70px; background-color: var(--color-palette-1)"></div>

<div class="page-width">
    <div class="page-title ">
        <img alt="" src="https://source.unsplash.com/collection/12"/>
        <h1>Collections</h1>
    </div>
    <div class="collections-box">
        {% for collection in collections %}

            <div class="collection-card">
                <a href="{{ collection.url }}">
                    <img src="{{ collection.image | img_url: '2048x' }}" alt=""/>
                </a>
                <div class="title-box">
                    <a href="{{ collection.url }}">
                        <h2>{{ collection.title }}</h2>
                        <p>{{ collection.description }}</p>
                    </a>

                    <div>
                        {% for tag in collection.tags %}
                            <a class="tags" href="{{ collection.url }}/{{ tag | handle }}">
                                {{ tag }}
                            </a>
                            {% unless forloop.last %}/
                            {% endunless %}
                        {% endfor %}
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>

</div>

{%- comment -%} Theme kit default list-collections.liquid {% for collection in
collections %} {% unless collection.handle == 'frontpage' %} {% capture
collection_title %}{{ collection.title | escape }}{% endcapture %}
<a href="{{ collection.url }}">More {{ collection_title }} &rsaquo;</a>
{% for product in collection.products limit:5 %} {% assign grid_item_width =
'large--one-fifth medium--one-half' %}
<div>
	<a href="{{ product.url | within: collection }}">{{ product.title }}</a>
	{{ product.price | money }}
	{% unless product.available %}<br /><strong>sold out</strong>{% endunless %}
	<a href="{{ product.url | within: collection }}">
		<img
			src="{{ product.featured_image.src | img_url: 'large' }}"
			alt="{{ product.featured_image.alt | escape }}"
		/>
	</a>
</div>
{% endfor %} {% endunless %} {% endfor %} {%- endcomment -%}
